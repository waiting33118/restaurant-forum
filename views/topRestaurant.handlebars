<h1>Top10 人氣餐廳</h1>
<hr />
<div>
  {{#each restaurants}}
    <div class="card mx-auto mb-3" style="min-height: 145px; max-width:900px">
      <div class="row no-gutters">
        <div class="col-sm-4">
          <img src="{{this.image}}" class="card-img" alt="restaurant image">
        </div>
        <div class="col-sm-8">
          <div class="card-body">
            <a href="/restaurants/{{this.id}}">
              <h3 class="card-title">{{this.name}}</h3>
            </a>
            <span class="badge badge-secondary my-1">收藏數：{{this.FavoritedCount}}</span>
            <p class="card-text">{{this.description}}</p>
            {{#if this.isFavorited }}
              <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" class="d-inline"><button type="submit"
                  class="btn btn-danger">移除最愛</button></form>
            {{else}}
              <form action="/favorite/{{this.id}}" method="POST" class="d-inline"><button type="submit"
                  class="btn btn-primary">加到最愛</button>
              </form>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>