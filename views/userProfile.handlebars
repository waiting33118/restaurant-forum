<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-12 col-md-auto text-center"><img class="rounded-circle shadow-lg" src="{{user.image}}"
          alt="avatar" width="300px" height="300px">
      </div>
      <div class="col-12 col-md-auto text-center text-md-left mt-4 mt-md-0 ml-lg-5">
        <h1 class="card-title d-md-inline mr-3">{{user.name}} </h1>
        <h6 class="text-muted mb-3 d-inline">joined {{moment user.createdAt}}</h6>
        <h4 class="card-subtitle my-3">{{user.email}}</h4>
        <h4>已評論 {{user.CommentCounts}} 間餐廳</h4>
        <h4>已收藏 {{user.FavoritedCounts}} 間餐廳</h4>
        <h4>{{user.FollowingCounts}} 位追蹤中</h4>
        <h4>{{user.FollowerCounts}} 位粉絲</h4>
        {{#ifCond loginUser.id user.id}}
          <a class="btn btn-primary mt-5" href="/users/me/edit">修改基本資料</a>
        {{/ifCond}}
      </div>
    </div>
  </div>
</div>
<div class="row">
  {{!-- 追蹤中 --}}
  <div class="col-md-4">
    <div class="card mt-4">
      <div class="card-header">{{user.FollowingCounts}} 位追蹤中</div>
      <div class="card-body d-flex flex-wrap justify-content-left">
        {{#each user.Followings}}
          <a class="m-1" href="/users/{{this.id}}">
            <img class="rounded" src="{{this.image}}" alt="image" width="60" height="60">
          </a>
        {{/each}}
      </div>
    </div>
  </div>
  {{!-- 評論過的餐廳 --}}
  <div class="col-md-8">
    <div class="card mt-4">
      <div class="card-header">已評論 {{user.CommentCounts}} 間餐廳</div>
      <div class="card-body d-flex flex-wrap justify-content-left">
        {{#each user.Comments}}
          <a class="m-1" href="/restaurants/{{this.Restaurant.id}}">
            <img class="rounded" src="{{this.Restaurant.image}}" alt="image" width="60" height="60">
          </a>
        {{/each}}
      </div>
    </div>
  </div>
  {{!-- 收藏過的餐廳 --}}
  <div class="col-md-4">
    <div class="card mt-4">
      <div class="card-header">已評論 {{user.FavoritedCounts}} 間餐廳</div>
      <div class="card-body d-flex flex-wrap justify-content-left">
        {{#each user.FavoritedRestaurants}}
          <a class="m-1" href="/restaurants/{{this.id}}">
            <img class="rounded" src="{{this.image}}" alt="image" width="60" height="60">
          </a>
        {{/each}}
      </div>
    </div>
  </div>

  {{!-- 粉絲 --}}
  <div class="col-md-8">
    <div class="card mt-4">
      <div class="card-header">{{user.FollowerCounts}} 位粉絲</div>
      <div class="card-body d-flex flex-wrap justify-content-left">
        {{#each user.Followers}}
          <a class="m-1" href="/users/{{this.id}}">
            <img class="rounded" src="{{this.image}}" alt="image" width="60" height="60">
          </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>